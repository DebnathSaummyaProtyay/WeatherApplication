<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Gradient Background -->
    <item android:left="2dp" android:right="2dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#7928CA"
                android:endColor="#FF0080"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
